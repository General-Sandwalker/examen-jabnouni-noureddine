{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    <div class="accordion" id="productAccordion">
        {% for product in products %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading{{ product.id }}">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ product.id }}" aria-expanded="false" aria-controls="collapse{{ product.id }}">
                        {{ product.name }} - {{ product.price }} â‚¬
                    </button>
                </h2>
                <div id="collapse{{ product.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ product.id }}" data-bs-parent="#productAccordion">
                    <div class="accordion-body">
                        <strong>Description:</strong> {{ product.description }}<br>
                        <strong>Created At:</strong> {{ product.createdAt ? product.createdAt|date('Y-m-d H:i') : '' }}
                    </div>
                </div>
            </div>
        {% else %}
            <div>No products found.</div>
        {% endfor %}
    </div>
{% endblock %}
