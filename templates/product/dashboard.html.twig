{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">Product Dashboard</h1>
            <p class="text-muted">Welcome to your product management dashboard.</p>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-primary shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text flex-grow-1">View your current product list and manage inventory.</p>
                    <a href="{{ path('product_list') }}" class="btn btn-primary mt-auto">View Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-success shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Add Product</h5>
                    <p class="card-text flex-grow-1">Create a new product entry with details and pricing.</p>
                    <a href="{{ path('product_add') }}" class="btn btn-success mt-auto">Add New</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 border-info shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Account Settings</h5>
                    <p class="card-text flex-grow-1">Update your profile and account information.</p>
                    <button class="btn btn-info mt-auto" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="{{ path('product_add') }}" class="btn btn-outline-primary">Add Product</a>
                        <a href="{{ path('product_list') }}" class="btn btn-outline-secondary">View Products</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
